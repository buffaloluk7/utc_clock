<Window x:Class="UTCClock.Presentation.Clocks.DigitalClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UTCClock.Business.ViewModel;assembly=UTCClock.Business"
        Title="DigitalClock" Height="300" Width="300">
    <Grid>
        <Grid.DataContext>
            <vm:DigitalClockWindowViewModel />
        </Grid.DataContext>
        <TextBlock>
            <Run Text="{Binding Hour}" />
            <Run Text="{Binding Minute}" />
            <Run Text="{Binding Second}" />
        </TextBlock>
    </Grid>
</Window>
