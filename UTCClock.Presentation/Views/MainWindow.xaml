<Window x:Class="UTCClock.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console"
        Height="350"
        Width="525"
        DataContext="{Binding Path=MainWindow, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding CommandLog, Mode=OneWay}" AcceptsReturn="True" />
        <TextBox Grid.Row="1" x:Name="SearchQuery">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding SearchCommand}" CommandParameter="{Binding ElementName=SearchQuery, Path=Text}" Key="Return" />
            </TextBox.InputBindings>
        </TextBox>
    </Grid>
</Window>
