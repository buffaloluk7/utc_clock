<Window x:Class="UTCClock.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console"
        Height="350"
        Width="525"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Path=MainWindow, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <ListBox x:Name="CommandLogListBox" ItemsSource="{Binding CommandLog, Mode=OneWay}" BorderBrush="Transparent">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Command: " />
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Text="{Binding CommandInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" x:Name="SearchQuery">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
            </TextBox.InputBindings>
        </TextBox>
    </Grid>
</Window>