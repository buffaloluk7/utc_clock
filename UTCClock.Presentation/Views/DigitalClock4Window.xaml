<Window x:Class="UTCClock.Presentation.Views.DigitalClock4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DigitalClockWindow Gainsboro"
        Height="300"
        Width="300"
        DataContext="{Binding Path=DigitalClock4Window, Source={StaticResource Locator}}">
    <Grid Background="Gainsboro">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32">
            <Run Text="{Binding Hour, Mode=OneWay}" />
            <Run Text=":" />
            <Run Text="{Binding Minute, Mode=OneWay}" />
            <Run Text=":" />
            <Run Text="{Binding Second, Mode=OneWay}" />
        </TextBlock>
    </Grid>
</Window>
