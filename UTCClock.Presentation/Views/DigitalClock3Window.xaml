<Window x:Class="UTCClock.Presentation.Views.DigitalClock3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DigitalClockWindow Coral"
        Height="300"
        Width="300"
        DataContext="{Binding Path=DigitalClock3Window, Source={StaticResource Locator}}">
    <Grid Background="Coral">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32">
            <Run x:Name="Hour" />
            <Run Text=":" />
            <Run x:Name="Minute" />
            <Run Text=":" />
            <Run x:Name="Second" />
        </TextBlock>
    </Grid>
</Window>
